<%= simple_form_for Contact.new, :html => { class: 'form-horizontal' } do |f| %>
	<%= f.error_notification %>
	
  <div class="form-inputs">
		<%= f.input :sender_name, label: 'your name' %>
		<%= f.input :sender_email, label: 'your email' %>
		<%= f.input :body, label: 'your message', :input_html => { :rows => 10 } %>
	</div>
	
  <div class="form-actions">
    <%= f.button :submit, 'send your message', :class => 'btn btn-primary' %>
  </div>

<% end %>
